---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl text-center my-8">Projects</h2>

{
    projects.map((project) => (
        <div class="flex text-center flex-col mb-2 md:flex-row md:text-left">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="my-2">{project.description}</p>
                <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 transition-all">
                    More info
                </button>
            </div>
            <div class="flex-1 p-4">
                <img src={project.images} class="w-72 mx-auto" />
            </div>
        </div>
    ))
}
